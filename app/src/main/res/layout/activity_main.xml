<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lobster_regular"
        android:text="Welcome to SplitEase"
        android:textSize="32sp" />

    <Button
        android:id="@+id/btnEqualBreakdownPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_main"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:text="Equal Breakdown"
        android:letterSpacing="0.2"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnCustomBreakdownPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEqualBreakdownPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:letterSpacing="0.2"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_button"
        android:text="Custom Breakdown" />

    <Button
        android:id="@+id/SavedNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCustomBreakdownPage"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:textSize="16sp"
        android:letterSpacing="0.2"
        android:textColor="#ffffff"
        android:text="View Saved Names"/>

</RelativeLayout>
