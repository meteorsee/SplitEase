<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".CustomBreakdown"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/lobster_regular"
        android:text="Custom Breakdown"
        android:textSize="32sp" />

    <Button
        android:id="@+id/btnByPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button_customscreen"
        android:letterSpacing="0.1"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:text="Breakdown by Percentage" />
    <Button
        android:id="@+id/btnByAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnByPercentage"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:letterSpacing="0.1"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_customscreen"
        android:text="Breakdown by amount" />

</RelativeLayout>